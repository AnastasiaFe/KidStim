<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.nure.fedorenko.train2app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name="ua.nure.fedorenko.kidstim.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ua.nure.fedorenko.kidstim.activity.RegisterActivity" />
        <activity
            android:name="ua.nure.fedorenko.kidstim.activity.ParentMainActivity"
            android:label="@string/title_activity_parent_main"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity android:name="ua.nure.fedorenko.kidstim.activity.AddChildActivity" />
        <activity
            android:name="ua.nure.fedorenko.kidstim.activity.ParentTasksActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name="ua.nure.fedorenko.kidstim.activity.ParentRewardsActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity android:name="ua.nure.fedorenko.kidstim.activity.SaveTaskActivity" />
        <activity android:name="ua.nure.fedorenko.kidstim.activity.SaveRewardActivity" />
        <activity android:name="ua.nure.fedorenko.kidstim.activity.EditTaskActivity" />
        <activity android:name="ua.nure.fedorenko.kidstim.activity.EditRewardActivity" />
    </application>

</manifest>